<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-ffset-1">
      <form class="form-horizontal" ng-submit="PlaylistsIndexController.createPlaylist()">
        <fieldset>
          <div class="form-group">
            <label class="col-md-4 control-label">Add a new Playlist"</label>
            <div class="col-md-4">
              <input id="name" ng-model="PlaylistsIndexController.newPlaylist.name" type="text" class="form-control input-md" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4 control-label">Save Playlist</label>
            <div class="col-md-4">
              <button class="btn btn-primary">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>

    <input type="text" class="form-control" ng-model="searchText" placeholder="Search Playlists">
    <div ng-repeat="playlist in PlaylistsIndexConroller.playlists | filter: searchText" class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-3 col-xs-12">
                <span ng-hide="editing"><a ng-href="playlists/{{playlist._id}}">{{playlist.name}}</a></span>
                <input ng-show="editing" ng-model="playlist.name" type="text" class="form-control input-md">
              </div>
              <div class="col-md-9 col-xs-12">
                <ul class="list-group form-inline">
                  <li class="list-group-item">
                    <h4>{{playlist.songs.name}}</h4>
                  </li>
                </ul>
              </div>
              <div class="panel-footer">
                <button class="btn btn-danger" ng-click="PlaylistIndexController.deletePlaylist(playlist)">Delete Playlist</button>
                <button class="btn btn-success" ng-show="editing" ng-click="PlaylistsIndexController.editPlaylist(playlist); editing = false">Save Changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <input type="text" ng-model="addSong" placeholder="Add a Song" />
  <p>Searched for: {{addSong}}</p>
  <div>
    <div data-video="savCAd6RyPI"
      data-autoplay="0"
      data-loop="0"
      id="youtube-audio">
    </div>
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="https://cdn.rawgit.com/labnol/files/master/yt.js"></script>
   </div>
</div>
