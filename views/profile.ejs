<div class="container" ng-controller="PlaylistsIndexController as playlistsIndexCtrl">
  <h1>Profile</h1>
  <hr>
  <h2>Hey {{user.name}}!</h2>
  <hr>
  <h2>My Playlists:</h2>

  <input type="text" class="form-control" placeholder="New Playlist" ng-model="playlistsIndexCtrl.newPlaylist.playlistName">
  <input type="text" class="form-control" ng-model="searchText" placeholder="Search Playlists">
  <div ng-repeat="playlist in playlistIndexCtrl.playlists | orderBy: 'created' | filter: searchText" class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-xs-12 thumbnail">
              <img src="images/800x800.png" alt="album image">
            </div>
            <div class="col-md-9 col-xs-12">
              <ul class="list-group form-inline">
                <li class="list-group-item">
                  <h4 class="inline-header">Playlist Name:</h4>
                  <span>{{playlist.name}}</span>
                </li>
                <li class="list-group-item">
                  <h3 class="inline header">Song:</h3>
                  <span>{{playlist.song}}</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <a class="logout" href="/logout" class="btn btn-danger">Log Out</a>
</div>
